<section>
  <h2>Products</h2>
  <div>
    <%= link_to('Create Products', new_product_path) %>
  </div>
  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Manage</th>
      </tr>
    </thead>
    <tbody>
      <% products.each do |product| %>
        <tr>
          <td>
            <%= image_tag product.image_url if product.image_url %>
          </td>
          <td>
            <%= product.name %>
          </td>
          <td>
            NT$ <%= product.price %>
          </td>
          <td>
            <%= product.description %>
          </td>
          <td>
            <%= link_to('Edit', edit_product_path(product)) %>
            |
            Remove
          </td>
        </tr>
      <% end %>
    </tbody>
  <table>
</section>
