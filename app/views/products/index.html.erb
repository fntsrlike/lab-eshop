<section>
  <h2>Products</h2>
  <div>
   <%= link_to new_product_path do %>
      <button type="button" class="btn btn-primary btn-sm">Create Products</button>
    <% end %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Description</th>
        <th scope="col">Manage</th>
      </tr>
    </thead>
    <tbody>
      <% products.each do |product| %>
        <tr>
          <td>
            <%= image_tag(product.image_url, class: 'product rounded mx-auto d-block') if product.image_url %>
          </td>
          <td>
            <%= product.name %>
          </td>
          <td>
            NT$ <%= product.price %>
          </td>
          <td>
            <%= product.description %>
          </td>
          <td>
            <%= link_to('Edit', edit_product_path(product)) %>
            |
            <%= link_to('Remove', product, method: :delete, data: { confirm: 'Are you sure?' }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <table>
</section>
