<section>
  <h2>Orders</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Buyer</th>
        <th scope="col">Amount</th>
        <th scope="col">Total Cost</th>
        <th scope="col">Delivered At</th>
        <th scope="col">Ordered At</th>
        <th scope="col">Manage</th>
      </tr>
    </thead>
    <tbody>
      <% orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td>
            <%= "#{order.recipient}" %> <br/>
            <%= "(#{order.buyer.uid})" %>
          </td>
          <td>
            <ul>
              <% order.ordered_items.each do |item| %>
                <li><%= "#{item.product.name} x #{item.amount}" %></li>
              <% end %>
            </ul>
          </td>
          <td><%= order.sum %></td>
          <td><%= order.delivered_at&.in_time_zone('Taipei')&.to_s(:db) %></td>
          <td><%= order.ordered_at&.in_time_zone('Taipei')&.to_s(:db) %></td>
          <td>
            <button class="btn btn-primary btn-sm" disabled>
              Deliver
            </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  <table>
</section>
